# ROS2风格的近似配置
controller_manager:
  ros__parameters:
    joint_state_broadcaster:
      type: joint_state_broadcaster/JointStateBroadcaster
      
    tracer_motor_r_controller:
      type: velocity_controllers/JointVelocityController
      joint: right_wheel
      pid.p: 5.0
      pid.i: 20.0
      pid.i_clamp: 100.0
      
    tracer_motor_l_controller:
      type: velocity_controllers/JointVelocityController
      joint: left_wheel  
      pid.p: 5.0
      pid.i: 20.0
      pid.i_clamp: 100.0
