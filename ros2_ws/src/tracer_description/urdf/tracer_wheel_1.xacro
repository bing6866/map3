<?xml version="1.0"?>
<robot xmlns:xacro="http://ros.org/wiki/xacro" name="tracer_wheel">

    <xacro:macro name="tracer_wheel_1" params="wheel_prefix parent:='base_link' *joint_pose">
        <link name="${wheel_prefix}_wheel_link">
            <inertial>
                <mass value="6" />
                <origin xyz="0 0 0" />
                <inertia ixx="0.7171" ixy="0" ixz="0" iyy="0.1361" iyz="0" izz="0.7171" />
            </inertial>
            <visual>
                <origin xyz="0 0 0" rpy="0 0 0" />
                <geometry>
                    <mesh filename="file://$(find tracer_description)/meshes/tracer_wheel.dae" />
                </geometry>
            </visual>
            <collision>
              <origin
                xyz="0 0 0"
                rpy="0 0 0" />
              <geometry>
                <mesh filename="file://$(find tracer_description)/meshes/tracer_wheel.dae" />
              </geometry>
            </collision>
        </link>

        <joint name="${wheel_prefix}_wheel" type="continuous">
            <parent link="${parent}"/>
            <child link="${wheel_prefix}_wheel_link"/>
            <xacro:insert_block name="joint_pose"/>
            <axis xyz="0 1 0" rpy="0 0 0" />
        </joint>
    </xacro:macro>

</robot>
