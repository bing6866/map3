<?xml version="1.0"?>
<robot xmlns:xacro="http://ros.org/wiki/xacro" name="tracer_castor">

    <xacro:macro name="fl_castor" params="wheel_prefix parent:='base_link' castor_length:=0.002 castor_radius:=0.03724 *joint_pose">
        <link name="${wheel_prefix}_link">
            <inertial>
                <mass value="1" />
                <origin xyz="0 0 0" />
                <inertia ixx="0.7171" ixy="0" ixz="0" iyy="0.1361" iyz="0" izz="0.7171" />
            </inertial>
            <visual>
                   <geometry>
                        <mesh filename="file://$(find tracer_description)/meshes/castor_joint.dae" />
                   </geometry>
            </visual>
            <collision>
              <origin xyz="0 0 0" rpy="0 0 0" />
              <geometry>
                <!-- 这里现在可以使用参数了 -->
                <cylinder length="${castor_length}" radius="${castor_radius}"/>
              </geometry>
            </collision>
        </link>

        <joint name="${wheel_prefix}_wheel" type="continuous">
            <!-- 接收外部传入的 origin -->
            <xacro:insert_block name="joint_pose"/>
            <parent link="${parent}" />
            <!-- 名字要对应上面的 link name -->
            <child link="${wheel_prefix}_link" />
            <axis xyz="0 1 0" rpy="0 0 0" />
        </joint>
    </xacro:macro>

</robot>