<?xml version="1.0"?>
<robot xmlns:xacro="http://ros.org/wiki/xacro" name="tracer_wheel">
    <!-- 主文件 tracer_v1 已经包含了 castor，这里如果不删可能会重复，但为了安全先留着，如果报错请删除这行 -->
    <xacro:include filename="$(find tracer_description)/urdf/fl_castor.xacro" />
    
    <!-- 增加 parent 参数 -->
    <xacro:macro name="fl_wheel" params="wheel_prefix parent *joint_pose">
        <link name="${wheel_prefix}_wheel_link">
            <inertial>
                <mass value="1" />
                <origin xyz="0 0 0" />
                <inertia ixx="0.3131" ixy="0" ixz="0" iyy="0.3131" iyz="0" izz="0.1361" />
            </inertial>
            <visual>
               <geometry>
                    <mesh filename="file://$(find tracer_description)/meshes/castor.dae" />
               </geometry>
            </visual>
            <collision>
              <origin xyz="0 0 0" rpy="0 0 0" />
              <geometry>
                <mesh filename="file://$(find tracer_description)/meshes/castor.dae" />
              </geometry>
            </collision>
        </link>

        <joint name="${wheel_prefix}_wheel" type="continuous">
            <!-- 使用传入的 parent 参数 -->
            <parent link="${parent}"/>
            <child link="${wheel_prefix}_wheel_link"/>
             <dynamics damping="0.0" friction="0.0"/>
            <xacro:insert_block name="joint_pose"/>
            <axis xyz="0 0 1" rpy="0 0 0" />
        </joint>
    </xacro:macro>

</robot>